<Screen_1>
    MDScreen: 
        MDBoxLayout:
            id: box
            orientation: 'vertical'
            MDLabel: 
                text: "this is home"
            # this will create a space navigation bottom 
            MDBottomNavigation: 
                panel_color: 1,1,1,.4
                #text_color_active: 0,0,0,1
                id: bottom_nav
                # this will create a navigation button on the bottom of screen 
                MDBottomNavigationItem: 
                    name: 'screen 1' 
                    text: 'Settings' 
                    icon: './icons/setting.webp' 
                    active: True
        
                # this will create a navigation button on the bottom of screen 
                MDBottomNavigationItem: 
                    name: 'screen 2' 
                    text: 'Search' 
                    icon: './icons/search.png' 
        
                    # this will be triggered when screen 2 is selected 
                    # creates a label 
                    MDLabel: 
                        text: 'You have selected Microphone' 
                        halign: 'center' 
        
                # this will create a navigation button on the bottom of screen 
                MDBottomNavigationItem: 
                    name: 'screen 3' 
                    text: 'Profile' 
                    icon: './icons/profile.png' 
                    on_tab_release: app.profileSwitch()

<Manager>:
    id: screen_manager
    screen_1: screen_1 
    screen_2: screen_2

    Screen_1:
        id: screen_1
        name: 'screen_1'
        manager: screen_manager
    Screen_2:
        id: screen_2
        name: 'screen_2'
        manager: screen_manager 