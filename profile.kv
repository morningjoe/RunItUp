<Screen_2>
    MDScreen:
        BoxLayout:
            orientation: "vertical"

            # Main scrollable area
            MDScrollView:
                MDBoxLayout:
                    id: main_scroll
                    orientation: "vertical"
                    adaptive_height: True
                    padding: "10dp"
                    spacing: "10dp"
                    md_bg_color: app.theme_cls.primary_color
                    MDLabel:
                        text: "Profile"
                        parent_background: 0,0,.8,.5
                    MDLabel:
                        text: "Jokorie"
                        size_hint_y: None
                        height: self.texture_size[1]

            # Fixed bottom navigation bar with full width
            MDBottomNavigation:
                panel_color: 1, 1, 1, .4

                MDBottomNavigationItem:
                    name: 'screen 1'
                    text: 'Settings'
                    icon: './icons/setting.webp'

                MDBottomNavigationItem:
                    name: 'screen 2'
                    text: 'Search'
                    icon: './icons/search.png'

                MDBottomNavigationItem:
                    name: 'screen 3'
                    text: 'Profile'
                    icon: './icons/profile.png'
                    active: True
    